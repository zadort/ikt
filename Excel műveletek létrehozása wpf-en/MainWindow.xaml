<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="1920" Width="1080">
    <Grid>
        <StackPanel>
            <ListBox Name="ExcelLista" Height="100" Margin="10"/>
            <StackPanel Margin="10" Width="205" HorizontalAlignment="Left">
                <Label FontWeight="Bold" HorizontalAlignment="Center">Fontos</Label>
            <Button Width="200" HorizontalAlignment="Left" Height="30" Margin="1" x:Name="Letrehoz" Click="Letrehoz_Click">Excel dokumentum létrehozása</Button>
                <Button Width="200" HorizontalAlignment="Left" Height="30" Margin="1" x:Name="Betolt" Click="Betolt_Click">Excel dokumentum betöltése</Button>
            </StackPanel>
            <StackPanel Margin="10" HorizontalAlignment="Left">
                <Label FontWeight="Bold" HorizontalAlignment="Center">Betű</Label>
                <Button Width="200" Height="30" Margin="1" x:Name="BetuSzin" Click="BetuSzin_Click">Betű színének módosítása</Button>
                <Button Width="200" Height="30" Margin="1" x:Name="BetuSzinHatter" Click="BetuSzinHatter_Click">Betű hátterének megváltoztatása</Button>
                <Button Width="200" Height="30" Margin="1" x:Name="BetuMeret" Click="BetuMeret_Click">Betű méretének módosítása</Button>
                <Button Width="200" Height="30" Margin="1" x:Name="BetuStilus" Click="BetuStilus_Click">Betű stílusának megváltoztatása</Button>
                <Button Width="200" Height="30" Margin="1" x:Name="Felkover" Click="Felkover_Click">Félkövér</Button>
                <Button Width="200" Height="30" Margin="1" x:Name="Dolt" Click="Dolt_Click">Dőlt</Button>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Window>